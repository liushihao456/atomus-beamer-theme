\mode<presentation>

% Requirement
\RequirePackage{tikz}
\RequirePackage{fontspec}

% Set line spacing
% It affects code listings too, making them look ugly
% \renewcommand{\baselinestretch}{1.25}

% Use symbols as footnote markers
% It doesn't work. Not sure why.
\renewcommand{\thefootnote}{\fnsymbol{footnote}}

% Set font
\setCJKsansfont{msyh}[
Path=assets/font/,
UprightFont=*,
BoldFont=* Bold
]
\setsansfont{Arial}[
Path=assets/font/,
UprightFont=*,
BoldFont=* Bold,
ItalicFont=* Italic,
BoldItalicFont=* Bold Italic
]

% Settings
\useinnertheme{atomus}
\useoutertheme{atomus}
\usecolortheme{atomus}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{itemize subitem}[circle]

% The background canvas is vertically shaded from white to RGB(220,220,220)
\definecolor{lightgray}{RGB}{220,220,220}
\setbeamertemplate{background canvas}[vertical shading]
[top=white,bottom=lightgray]

\mode<all>